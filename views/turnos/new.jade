extends ../layout
block content
  form
    .grid-block
      .medium-12.grid-content
        label Fecha de Recepcion*
          h4 12/dic/2015
    .grid-block
      .medium-3.grid-content
        label Tipo de Documento*
        select
          option(value="oficio") Oficio
          option(value="Tarjeta") Tarjeta
          option(value="Circular") Circular
      .medium-4.grid-content
        label Número de documento*
          input(type="text")
      .medium-2.grid-content
        label Fecha del documento
        h4 12/dic/2015
      .medium-3.grid-content
        label Recibido vía*
        select
          option(value="mensajero") Mensajero
          option(value="mensajeria") Mensajeria
      .medium-12.grid-content
            label Asunto*
            textarea     
    .grid-block
      label 
        b
          |Envía 
    .grid-block
      .medium-6.grid-content
        label Remitente*
        input(type="text")
      .medium-6.grid-content
        label Cargo Remitente*
        input(type="text")
    .grid-block
        .medium-6.grid-content
          label Dependencia
          input(type="text")
        .medium-6.grid-content
            label Estado*
            input(type="text")
    .grid-block
      .medium-12.grid-content 
        .clearfix
          .float-left
            br
            label <b> Turnado a*</b>
          table.max
            tbody
              tr
                th(width="10px") #
                td Nombre*
                td Cargo
                td(width="150px")
                td(width="150px")
              tr
                th 1
                th
                  input(type="text")
                th
                  input(type="text")
                th
                  button.button.warning
                    i.fa.fa-eraser
                  button.button.success
                    i.fa.fa-plus
              tr
                td 2
                td César Encarnación
                td Auxiliar
                td 
                  a.button.alert
                    i.fa.fa-trash    
      .medium-6.grid-content
        label Descripción Breve del Documento*
        textarea
      .medium-6.grid-content
        label Observaciones*
        textarea
      .medium-4.grid-content
        label Fecha de tramite
        input(type="text")
      .medium-4.grid-content 
            .clearfix
              .float-left
          label
            h4
              |Marcar como Urgente 
              input.switch-input(type="checkbox" id="cbUrgente")
              label.switch-paddle(for="cbUrgente")
                span.switch-active.blanco(aria-hidden="true") Sí
                span.switch-inactive(aria-hidden="true") No
      .medium-12.grid-content
        button.button.success
          i.fa.fa-save.fa-2x
          br
          |&nbspRegistrar turno
        a.button.alert(href="/turnos")
          i.fa.fa-times.fa-2x
          br
          |&nbspCancelar registro
